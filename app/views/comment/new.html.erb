
<%= form_for @comment, :url => { :action => "create" },:html => {:multipart => true} do |f| %> 
  <%= f.hidden_field :course_id, :value => @course.id %>
  
    <legend><%="Add Comment"%></legend>
    <%= f.text_area :content , :class => "span8",:rows => 5, :placeholder => "Your Comment"%>
  
  <p><%= f.submit "Submit", :class =>"btn btn-primary" %></p>
<%end%>  
