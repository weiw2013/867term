<%= form_for @course,  :url => { :action => "add_one" },:html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Topic %><br />
    <%= f.collection_select :topic, Course::TOPICS, :to_s, :to_s, 
       :include_blank => true%>
  </p>
  <p>
    <%= f.label :Time %><br />
    <%= f.datetime_select :start_time, { :include_blank => true, :start_year => 2013 } %>
  </p>
  <p>
    <%= f.label :Length %><br />
    <%= f.text_field :length %>
  </p>
  <p>
    <%= f.label :Description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.file_field :attachment %>
  </p>
  
  <p><%= f.submit %></p>
<% end %>